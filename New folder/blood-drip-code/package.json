{
  "name": "blood-drip-code",
  "displayName": "Blood Drip Code - Haunted Editor",
  "description": "A haunting VS Code experience with blood drips, ghost cursors, and candlelight coding for Kiroween 2025",
  "version": "1.0.0",
  "publisher": "kiroween-hackathon",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other",
    "Themes"
  ],
  "keywords": [
    "halloween",
    "spooky",
    "blood",
    "horror",
    "kiroween",
    "haunted",
    "effects"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "blood-drip-code.enableBloodDrip",
        "title": "ü©∏ Enable Blood Drip on Errors"
      },
      {
        "command": "blood-drip-code.enableGhostCursor",
        "title": "üëª Enable Ghost Cursor Trails"
      },
      {
        "command": "blood-drip-code.enableCandlelight",
        "title": "üïØÔ∏è Enable Candlelight Focus Mode"
      },
      {
        "command": "blood-drip-code.toggleAllEffects",
        "title": "üéÉ Toggle All Haunting Effects"
      }
    ],
    "configuration": {
      "title": "Blood Drip Code",
      "properties": {
        "bloodDripCode.bloodDripEnabled": {
          "type": "boolean",
          "default": true,
          "description": "Show blood drip effects on error lines"
        },
        "bloodDripCode.ghostCursorEnabled": {
          "type": "boolean",
          "default": true,
          "description": "Show ghost cursor trails"
        },
        "bloodDripCode.candlelightEnabled": {
          "type": "boolean",
          "default": false,
          "description": "Enable candlelight focus mode"
        },
        "bloodDripCode.dripIntensity": {
          "type": "string",
          "default": "medium",
          "enum": [
            "light",
            "medium",
            "heavy"
          ],
          "description": "Blood drip intensity"
        },
        "bloodDripCode.dripSpeed": {
          "type": "number",
          "default": 200,
          "minimum": 50,
          "maximum": 1000,
          "description": "Blood drip animation speed in milliseconds"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/node": "18.x",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "typescript": "^5.3.2"
  }
}
